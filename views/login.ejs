<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Login</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
  <style>
    

    .login-container {
      background-color: white;
      border-radius: 15px;
      padding: 40px;
      width: 100%;
      max-width: 450px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease-in-out;
    }

    .login-container:hover {
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    }

    .login-container h2 {
      text-align: center;
      margin-bottom: 30px;
      font-size: 2rem;
      font-weight: bold;
      color: #333;
    }

    .form-control {
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 20px;
      font-size: 1rem;
      transition: all 0.3s ease;
      border: 1px solid #ddd;
    }

    .form-control:focus {
      border-color: #6c63ff;
      box-shadow: 0 0 8px rgba(108, 99, 255, 0.6);
    }

    .btn-primary {
      background-color: #6c63ff;
      border-color: #6c63ff;
      padding: 12px;
      border-radius: 8px;
      font-size: 1.1rem;
      width: 100%;
      transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
      background-color: #3b79ff;
      border-color: #3b79ff;
    }

    .forgot-password {
      color: #6c63ff;
      text-decoration: none;
      font-size: 0.9rem;
      text-align: center;
      display: block;
      margin-top: 10px;
      transition: color 0.3s;
    }

    .forgot-password:hover {
      color: #3b79ff;
    }

    .text-danger {
      color: #dc3545 !important;
    }
  </style>
</head>
<body <body style="background: linear-gradient(to top right, purple, blue); display: flex; align-items: center; justify-content: center; min-height: 100vh;"></body>>

  <div class="login-container">
    <h2>Admin Login</h2>

    <!-- Login Form -->
    <form action="/user/login" method="POST">
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" required placeholder="Enter your email">
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" required placeholder="Enter your password">
      </div>

      <!-- Error Message Display -->
      <% if (typeof errorMessage !== 'undefined') { %>
        <div class="text-danger text-center mt-4">
            <p><%= errorMessage %></p>
        </div>
      <% } %>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-primary">Login</button>
    </form>
  </div>

  <!-- Bootstrap Icons CDN -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.js"></script>
</body>
</html>
